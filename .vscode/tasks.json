                              	]
               },
               "group": "build",
               "presentation": 
			{
                    "echo": 			false,
                    "reveal": 		"always",
                    "focus": 			false,
                    "panel": 			"shared",
                    "showReuseMessage": false,
                    "clear": 			true
               }
          }
     ]
}